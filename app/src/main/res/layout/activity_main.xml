<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/asynctest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncTask测试"/>

        <Button
            android:layout_below="@+id/asynctest"
            android:layout_centerInParent="true"
            android:id="@+id/handlerthread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HandlerThread测试"/>

        <Button
            android:layout_below="@+id/handlerthread"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fetch_thread"
            android:text="fetchThread测试"/>

        <Button
            android:layout_below="@+id/fetch_thread"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/runnable"
            android:text="Runnable卖票测试"/>

        <Button
            android:layout_below="@+id/runnable"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewtest"
            android:text="测试View的onClick和onTouch"/>

        <Button
            android:layout_below="@+id/viewtest"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageview"
            android:text="测试ImageView"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>